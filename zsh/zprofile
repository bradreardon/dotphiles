# Customize to your needs...

alias gt="cd ~/Library/Mobile\ Documents/com~apple~CloudDocs/Library/School/Semesters"
alias pwp="cd ~/Projects/DUO/pathwright_provisioning"
alias flushdns="sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder"
alias ic="cd ~/Library/Mobile\ Documents/com~apple~CloudDocs/"
alias pwsh='f() { kubectl -n pw-$1 get pod | awk '"'"'/backend-backend/{ print $1; exit; }'"'"' | xargs -J {} -o kubectl -n pw-$1 exec -it {} /bin/bash };f'

ppcat() {
    local out colored
    out=$(/bin/cat $@)
    colored=$(echo $out | pygmentize -f console -g 2>/dev/null)
    [[ -n $colored ]] && echo "$colored" || echo "$out"
}

use-docker-lab() {
    export DOCKER_HOST="tcp://10.1.1.61:2375"
}

